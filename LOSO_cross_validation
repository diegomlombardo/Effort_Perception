y_pred_lasso = X * coef + intercept;

% Compute R²
SS_res = sum((y - y_pred_lasso).^2);
SS_tot = sum((y - mean(y)).^2);
R2_lasso = 1 - SS_res / SS_tot;

fprintf('LASSO R² on full data: %.4f\n', R2_lasso);
